<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Ikuzsmusicapp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- backgroundColor -->
        <item name="android:windowBackground">@color/darker_blue</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/dark_blue</item>
        <item name="fontFamily">@font/ubuntu</item>
        <item name="android:fontFamily">@font/ubuntu</item>
    </style>
    <style name="Theme.Ikuzsmusicapp.NoactionBar.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.Ikuzsmusicapp.NoactionBar.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Ikuzsmusicapp.NoactionBar.PopupOverlay"
        parent="ThemeOverlay.AppCompat.Light" />
</resources>