<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="12dp"
    android:layout_marginEnd="16dp">


    <TextView
        android:id="@+id/localSongTitel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="@font/ubuntu"
        android:maxLines="1"
        android:text="Song"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/localSongArtist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/localSongTitel"
        android:ellipsize="end"
        android:fontFamily="@font/ubuntu"
        android:maxLines="1"
        android:text="artist"
        android:textColor="#7E7E7E"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/albumTitel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/localSongTitel"
        android:layout_toEndOf="@+id/localSongArtist"
        android:ellipsize="end"
        android:fontFamily="@font/ubuntu"
        android:maxLines="1"
        android:text=" - "
        android:textColor="#7E7E7E"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/localSongAlbum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/localSongTitel"
        android:layout_toEndOf="@id/albumTitel"
        android:ellipsize="end"
        android:fontFamily="@font/ubuntu"
        android:maxLines="1"
        android:text="album"
        android:textColor="#7E7E7E"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="12dp"
        android:layout_below="@id/localSongArtist" />
</RelativeLayout>